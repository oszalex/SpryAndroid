<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    android:orientation="vertical">

    
    <ImageView
        android:id="@+id/login_logo"
        android:layout_width="256dp"
        android:layout_weight="2"
        android:layout_height="0dip"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dip"
        android:contentDescription="@string/logo_description"
        android:src="@drawable/buddy" />
    
  	   <TextView
	        android:id="@+id/friend_username"
	        android:layout_width="match_parent"
	        android:gravity="center_horizontal"    	
	        android:layout_weight="1"
	        android:layout_height="0dip"
	        android:singleLine="true"
	    	android:textColor="#FFFFFF"
	    	android:textSize="30sp"
        	android:text="Linda Grafenstein" />
	   
	    <TextView
	        android:id="@+id/friend_nickname"
	        android:layout_width="match_parent"
	        android:gravity="center_horizontal"    	
	        android:layout_weight="1"
	        android:layout_height="0dip"
	        android:singleLine="true"
	    	android:textColor="#FFFFFF"
	    	android:textSize="20sp"
	        android:text="Don Graf" />
	
   
   <TextView
        android:id="@+id/friend_sex"
        android:layout_width="match_parent"
        android:gravity="center_horizontal"    	
        android:layout_weight="1"
        android:layout_height="0dip"
        android:singleLine="true"
    	android:textColor="#FFFFFF"
    	android:textSize="15sp"
        android:text="female" />
       
    <TextView
        android:id="@+id/friend_lastlogin"
        android:layout_width="match_parent"
        android:gravity="center_horizontal"    	
        android:layout_weight="3"
        android:layout_height="0dip"
        android:singleLine="true"
    	android:textColor="#FFFFFF"
    	android:textSize="15sp"
        android:text="last login: 2.10.2013 11:25" />  

</LinearLayout>
