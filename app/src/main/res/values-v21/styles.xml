<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="BaseTheme" parent="android:Theme.Material.Light">
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="BaseTheme">
        <!-- Customize your theme here. -->

        <item name="android:actionBarStyle">@style/MyActionBar</item>


        <!-- StatusBarColor -->
        <item name="android:statusBarColor">@color/wm_dark_green</item>


        <!-- remove shadow from actionbar -->
        <item name="android:windowContentOverlay">@null</item>


        <!-- Hintergrundfarbe vom Hauptfenster (da wo die events aufgelistet werden) -->
        <item name="android:windowBackground">@color/wm_light_green</item>


    </style>

    <!-- ActionBar styles -->
    <style name="MyActionBar" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/menuBarTopBorder</item>
       <!-- <item name="android:displayOptions">showHome|homeAsUp|showTitle</item>
        <item name="displayOptions">showHome|homeAsUp|showTitle</item> -->
        <item name="android:icon">@android:color/transparent</item> <!-- This does the magic! -->
        <item name="android:titleTextStyle">@style/MyTheme.MyActionBar.TitleTextStyle</item>
       <!-- <item name="android:icon">@drawable/spry</item> -->
    </style>

    <style name="AppThemeNoActionBar" parent="android:Theme.Holo.Light.NoActionBar">
    </style>
</resources>
